<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>pack</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
		<fileSet>
			<directory>${project.build.directory}/classes</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
    </fileSets>
	<dependencySets>
		<dependencySet>
		  <includes>
			<include>com.edf.felix:carrousel:jar</include>
		  </includes>
		  <outputFileNameMapping>carrousel.jar</outputFileNameMapping>
		  <outputDirectory>/</outputDirectory>
		  <useProjectArtifact>true</useProjectArtifact>
		  <useTransitiveDependencies>false</useTransitiveDependencies>
		  <scope>runtime</scope>
		</dependencySet>
		
		 <dependencySet>
            <includes>
                <include>com.edf.felix:configurations-carrousel:jar</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
              <excludes>
				<exclude>application-dev.yml</exclude>
              </excludes>
            </unpackOptions>
            <outputDirectory>/properties/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <scope>runtime</scope>
        </dependencySet>
  </dependencySets>
</assembly>